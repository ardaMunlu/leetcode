function minEatingSpeed(piles, h) {
    let left = 1;
    let right = Math.max(...piles);

    while (left < right) {
        const mid = Math.floor((left + right) / 2);
        let total = 0;
        for (const pile of piles) {
            total += Math.ceil(pile / mid);
        }
        if (total <= h) {
            right = mid;
        } else {
            left = mid + 1;
        }
    }
    return left;
}
