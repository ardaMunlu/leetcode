var reorderList = function(head) {
    if (!head) return;

    //listenin orta elemanını bul
    let slow = head, fast = head;
    while (fast && fast.next) {
        slow = slow.next;
        fast = fast.next.next;
    }

    //listenin son kısmını ters çevir
    let second = slow.next;
    slow.next = null;
    let node = null;

    while (second) {
        const temp = second.next;
        second.next = node;
        node = second;
        second = temp;
    }

    //iki listeyi birleştir
    let first = head;
    second = node;

    while (second) {
        const temp1 = first.next, temp2 = second.next;
        first.next = second;
        second.next = temp1;
        first = temp1;
        second = temp2;
    }
};
